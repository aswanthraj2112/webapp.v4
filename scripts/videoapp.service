[Unit]
Description=Video App - Automated Docker Compose Service
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/ubuntu/oct1/webapp.v1
ExecStartPre=/home/ubuntu/oct1/webapp.v1/scripts/auto-configure.sh
ExecStart=/usr/bin/docker-compose up -d
ExecStop=/usr/bin/docker-compose down
StandardOutput=journal
User=ubuntu
Group=ubuntu

[Install]
WantedBy=multi-user.target
