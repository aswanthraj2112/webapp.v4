# Environment Variables for Local Development
# Copy this file to .env and fill in your values

# ==========================================
# AWS Cognito (Real AWS - Required)
# ==========================================
# Get these from your AWS Cognito User Pool
COGNITO_USER_POOL_ID=ap-southeast-2_XXXXXXXXX
COGNITO_CLIENT_ID=your-client-id-here
COGNITO_REGION=ap-southeast-2

# ==========================================
# LocalStack (Automatically configured)
# ==========================================
# These are set in docker-compose.dev.yml
# No need to change unless using external LocalStack

# AWS_REGION=ap-southeast-2
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test
# AWS_ENDPOINT=http://localstack:4566

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development

# API Ports (matches docker-compose.dev.yml)
VIDEO_API_PORT=8080
ADMIN_API_PORT=8081
CLIENT_PORT=5173

# ==========================================
# Resource Names (LocalStack)
# ==========================================
S3_BUCKET_NAME=n11817143-a2
DYNAMODB_TABLE_NAME=n11817143-videos
SQS_QUEUE_NAME=n11817143-transcode-queue

# ==========================================
# JWT Secret (Development Only)
# ==========================================
JWT_SECRET=dev-jwt-secret-change-in-production

# ==========================================
# Optional: Feature Flags
# ==========================================
ENABLE_CACHE=true
ENABLE_TRANSCODING=true
LOG_LEVEL=debug
